#----------------------------------------------------------------------------------------------------------------------------------#
# generic+
#----------------------------------------------------------------------------------------------------------------------------------#

#<first-entry>          =               move to the first entry
#<help>                 ?               this screen
#<last-entry>           *               move to the last entry
#<next-entry>           j               move to the next entry
#<next-line>            >               scroll down one line
#<previous-entry>       k               move to the previous entry
#<previous-line>        <               scroll up one line
#<select-entry>         <Return>        select the current entry
#<shell-escape>         !               invoke a command in a subshell
#<tag-prefix>           ;               apply next function to tagged messages

# page-movement
bind generic z noop
bind generic Z noop

bind generic \Cl noop
bind generic <F5> refresh

# movement
bind generic gg first-entry
bind generic M noop
bind generic gm middle-page
bind generic,index,compose G last-entry
bind generic,index,pager,attach,compose \Ce next-line
bind generic,pager \Cy previous-line
bind generic,index,pager,attach,compose \Cf next-page
bind generic,index,pager \Cb previous-page
bind generic zb current-bottom
bind generic zz current-middle
bind generic zt current-top

# previous match
bind generic,index,pager,browser N search-opposite

# bottom page
bind generic L noop
bind generic ,/ search-reverse

macro generic t "<enter-command>set my_resolve=\$resolve resolve=yes<Enter><tag-entry><enter-command>set resolve=\$my_resolve; unset my_resolve<Enter>" "tag entry and move to the next (possibly undeleted) one"
macro generic,index,browser <Space> "<enter-command>set my_resolve=\$resolve resolve=yes<Enter><tag-entry><enter-command>set resolve=\$my_resolve; unset my_resolve<Enter>" "tag entry and move to the next entry"

# ^J is Enter
bind generic,attach,compose <Enter> noop

# top page
bind generic H noop


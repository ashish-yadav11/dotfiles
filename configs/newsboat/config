auto-reload no
browser "firefox %u >/dev/null 2>&1"
cache-file "~/.config/newsboat/cache.db"
#external-url-viewer "urlscan"
#goto-first-unread no
goto-next-feed no
#keep-articles-days 365
#max-items 100
#notify-program "notify-send"
prepopulate-query-feeds yes
refresh-on-startup yes
#reload-time 30
save-path "~/Documents/newsboat/"

articlelist-format "%4i %f %D  %?T?|%-17T|  ?%t"
datetime-format "%D %R"
feedlist-format "%4i %n %11u %t"
#notify-format "newsboat: finished reload, %f unread feeds (%n unread articles total)"

# key bindings
unbind-key , # macro-prefix
unbind-key C # mark-all-feeds-read

bind-key ; macro-prefix
bind-key j next
bind-key k prev
bind-key J next-feed
bind-key K prev-feed
bind-key j down article
bind-key k up article
bind-key J next article
bind-key K prev article
bind-key l open
bind-key h quit
bind-key ^F pagedown
bind-key ^B pageup
bind-key g home
bind-key G end
bind-key [ sort
bind-key ] rev-sort
bind-key T toggle-show-read-feeds
bind-key ^A mark-all-feeds-read

unbind-key h feedlist

macro v set browser "mpv %u >/dev/null 2>&1" ; open-in-browser ; set browser "firefox %u >/dev/null 2>&1"

# colorsceme
color listnormal default default
color listfocus blue default reverse bold
color listnormal_unread default default
color listfocus_unread blue default reverse bold
color info color18 yellow reverse bold

#search-highlight-colors black yellow bold

# regex highlighting
highlight article "(^Feed:.*|^Title:.*|^Author:.*)" cyan default bold
highlight article "(^Link:.*|^Date:.*)" default default
highlight article "https?://[^ ]+" green default

highlight article "^(Title):.*$" blue default
highlight article "\\[[0-9][0-9]*\\]" magenta default bold
highlight article "\\[image\\ [0-9]+\\]" green default bold
highlight article "\\[embedded flash: [0-9][0-9]*\\]" green default bold
highlight article ":.*\\(link\\)$" cyan default
highlight article ":.*\\(image\\)$" blue default
highlight article ":.*\\(embedded flash\\)$" magenta default

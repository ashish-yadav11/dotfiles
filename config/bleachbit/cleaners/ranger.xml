<?xml version="1.0" encoding="UTF-8"?>
<cleaner id="ranger">
  <label>Ranger</label>
  <description>Console file manger</description>
  <option id="command history">
    <label>Command history</label>
    <description>Delete command history</description>
    <action search="file" command="truncate" path="~/.local/share/ranger/history"/>
  </option>
  <option id="tagged">
    <label>Tagged</label>
    <description>Remove tagged entries</description>
    <action search="file" command="truncate" path="~/.local/share/ranger/tagged"/>
  </option>
</cleaner>

unmap <C-m>
unmap <C-n>
map b toggle_statusbar
map [index] b toggle_statusbar

#map r rotate rotate-cw
map R rotate rotate-ccw
map i recolor
map <C-r> reload

map Q quit
map q feedkeys "z0<S-q>"

map J scroll half-down
map K scroll half-up
map <C-j> scroll full-down
map <C-k> scroll full-up

#map c feedkeys ":set recolor-keephue<Return>:<Return>"
#map D feedkeys ':set recolor-darkcolor "#fbf1c7"<Return>:set recolor-lightcolor "#282828"<Return>:set recolor true<Return>'
#map W feedkeys ':set recolor-darkcolor "#000000"<Return>:set recolor-lightcolor "#bdae93"<Return>:set recolor true<Return>'

map <A-F1> set "recolor-keephue"
map <A-F2> set 'recolor-darkcolor "#fbf1c7"'
map <A-F3> set 'recolor-lightcolor "#282828"'
map <A-F4> set 'recolor-darkcolor "#000000"'
map <A-F5> set 'recolor-lightcolor "#bdae93"'
map <A-F6> set 'recolor true'

map c feedkeys "<A-F1>:<Return>"
map D feedkeys "<A-F2><A-F3><A-F6>"
map W feedkeys "<A-F4><A-F5><A-F6>"



pkgname=terminal-shortcuts
pkgver=1
pkgrel=1
pkgdesc="terminal and termopen shortcuts"
arch=(any)
license=(GPL)

package() {
    st=$(which st)
    mkdir -p "$pkgdir/usr/bin"
    ln -sfrT "$pkgdir/$st" "$pkgdir/usr/bin/terminal"
    ln -sfrT "$pkgidr/$st" "$pkgdir/usr/bin/termopen"
}
